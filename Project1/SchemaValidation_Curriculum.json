db.createCollection("Curriculum", {
   validator: {
      $jsonSchema: {
         bsonType: "object",
         required: ["ID_Usuario", "ID_Curriculum", "Fecha_Crea_CV", "ID_Carrera", "Nom_Carrera", "Idioma", "Institucion", "Fortalezas", "Hab_Tecnicas"],
